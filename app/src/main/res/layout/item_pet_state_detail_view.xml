<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/petStateDetailTable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/pet_state_detail_table_top_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTableDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:padding="@dimen/pet_state_detail_table_padding"
                android:text="@string/pet_state_detail_date" />

            <TextView
                android:id="@+id/textTableWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/pet_state_detail_table_padding"
                android:text="@string/pet_state_detail_weight" />

            <TextView
                android:id="@+id/textTableChange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/pet_state_detail_table_padding"
                android:text="@string/pet_state_detail_change" />


            <TextView
                android:id="@+id/textTableDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:padding="@dimen/pet_state_detail_table_padding" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pet_state_line_depth"
            android:layout_marginTop="@dimen/pet_state_detail_table_value_margin"
            android:background="@color/colorBlackE" />
    </LinearLayout>

    <Button
        android:id="@+id/btnWeightMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pet_state_detail_table_top_margin"
        android:text="@string/pet_state_detail_more"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petStateDetailTable" />

</android.support.constraint.ConstraintLayout>
