<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.wooltari.user.SignInActivity"
    android:orientation="vertical">
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:src="@mipmap/ic_launcher"
        android:background="@color/colorPrimaryDark"
        />

    <EditText
        android:id="@+id/signin_id_edittext"
        android:layout_height="wrap_content"
        android:layout_width="250sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30sp"
        android:text="nyagum@gmail.com"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/signin_password_edittext"
        android:layout_height="wrap_content"
        android:layout_width="250sp"
        android:layout_gravity="center_horizontal"
        android:text="nyagum"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Login"
        android:onClick="onClick_Login" />

    <CheckBox
        android:id="@+id/signin_autologin_checkbox"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="자동로그인 설정"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/button_search_password"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="비밀번호를 잊으셨나요"
        android:onClick="onClick_MiggingPassword"/>

    <Button
        android:id="@+id/button_new_account"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="계정이 없으신가요? 새로운 계정 설정"
        android:onClick="onClick_Signup"/>

    <Button
        android:id="@+id/button_login_google"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="10sp"
        android:text="구글로 로그인"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_login_facebook"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="10sp"
        android:text="페이스북으로 로그인"
        android:textStyle="bold"/>
</LinearLayout>
