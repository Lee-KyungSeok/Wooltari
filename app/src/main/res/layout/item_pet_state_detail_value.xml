<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/textPSDValueDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center_horizontal"
            android:text="@string/pet_state_detail_date"
            android:background="@drawable/pet_state_detail_table_value" />

        <TextView
            android:id="@+id/textPSDValueWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/pet_state_detail_weight"
            android:background="@drawable/pet_state_detail_table_value" />

        <TextView
            android:id="@+id/textPSDValueDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/pet_state_detail_delete"
            android:background="@drawable/pet_state_detail_table_value" />

</LinearLayout>