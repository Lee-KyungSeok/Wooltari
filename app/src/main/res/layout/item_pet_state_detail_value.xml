<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pet_state_detail_table_value_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textPSDValueDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center_horizontal"
            android:padding="@dimen/pet_state_detail_table_padding"
            android:text="-"  />

        <TextView
            android:id="@+id/textPSDValueWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/pet_state_detail_table_padding"
            android:text="-" />

        <TextView
            android:id="@+id/textPSDValueChange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/pet_state_detail_table_padding"
            android:text="-" />

        <TextView
            android:id="@+id/textPSDValueDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginEnd="@dimen/pet_state_detail_table_value_edit_right_margin"
            android:padding="@dimen/pet_state_detail_table_padding"
            android:text="@string/pet_state_detail_edit" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pet_state_line_depth"
        android:layout_marginTop="@dimen/pet_state_detail_table_value_margin"
        android:background="@color/colorBlackE" />

</LinearLayout>