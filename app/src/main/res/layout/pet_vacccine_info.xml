<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/petvaccineactivity_petInfo_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="85sp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_marginTop="7sp"
            android:layout_marginBottom="7sp">
                <LinearLayout
                    android:id="@+id/petvaccineactivity_vaccineinfo_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:orientation="vertical"
                    android:paddingLeft="15sp">
                    <TextView
                        android:id="@+id/petvaccineactivity_vaccineinfo_vaccine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="광견병"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        />
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow android:layout_span="2">
                            <TextView
                            android:layout_width="80sp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="회차"
                            android:textColor="#000000"/>
                            <TextView
                                android:id="@+id/petvaccineactivity_vaccineinfo_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:text="1/3"
                                android:textColor="#000000"
                                android:layout_marginLeft="12sp"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="80sp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="접종 주기"
                                android:textColor="#000000"
                            />
                            <TextView
                                android:id="@+id/petvaccineactivity_vaccineinfo_period"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:text="1개월"
                                android:textColor="#000000"
                                android:layout_marginLeft="12sp"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="80sp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="접종 예정일"
                                android:textColor="#000000"
                                />
                            <TextView
                                android:id="@+id/petvaccineactivity_vaccineinfo_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:text="2018/01/02"
                                android:textColor="#000000"
                                android:layout_marginLeft="12sp"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="80sp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="병원"
                                android:textColor="#000000"
                            />
                            <TextView
                                android:id="@+id/petvaccineactivity_vaccineinfo_hospital"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:text="하나병원"
                                android:textColor="#000000"
                                android:layout_marginLeft="12sp"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <ToggleButton
                        android:id="@+id/petvaccineactivity_petInfo_alarm_ToggleButton"
                        android:layout_width="65sp"
                        android:layout_height="65sp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ckeck"
                        android:textOff=" "
                        android:textOn=" " />
                </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>